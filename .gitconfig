[user]
	name = Christopher Van Wiemeersch
	email = cvan@aalto.co
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = /Users/cvan/.gitignore
	editor = /usr/bin/vim
	autocrlf = input
[alias]
	ci = commit
	co = checkout
[merge]
	tool = meld
[branch "master"]
        remote = origin
        merge = refs/heads/master
        rebase = true
[github]
	user = cvan
[interactive]
	singlekey = 1
[push]
	default = matching
[alias]
	get = "!f() { echo Merging $1 && git checkout master && git pull && git submodule sync && git submodule update --recursive && git checkout $1 && git rebase master && git checkout master && git merge $1; }; f"
